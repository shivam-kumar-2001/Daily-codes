#include <iterator>
#include<bits/stdc++.h>
#include<array>
#include<algorithm>
#include <list>
#include <iostream>
#include <stdlib.h>
using namespace std;
int main()
{
 int i,j,n,l=0,m=0;
 char a;
 string s="leetcode";
 n=s.size();
 for(i=0;i<n;i++)
 {
    
    	if(s[i]==s[i+1])
    	{
    		l++;
    	}
    	else
    	{
    		l=0;
    	}
    if(l>m)
    {
    	m=l;
    }
 }
 cout<<m+1;
  return 0;
}
